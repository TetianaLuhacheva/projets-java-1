package fr.tetiana.casino;

import java.util.Scanner;

public class Main {

	public static void main(String[] args) {		
		
		// 1. Creer un caisse
		
		// Instances de classe CAISSE
		Caisse caisse1 = new Caisse();
		Out.r("Saisissez votre montant :");

		Scanner scan = new Scanner(System.in);	
		double montant1 = scan.nextDouble();
		
		// Pour la classe CAISSE
		caisse1.setMontantCaisse(montant1);
		Out.r("Caisse a accept–µ : " + montant1 + " euros.");
		
		scan.close();
		
		
		// 2. Creer 
		Out.r("Est-ce que vous voulez effectuer une transaction?\n1-Oui\n2-non\nVotre chois: ");
		

	}

}
